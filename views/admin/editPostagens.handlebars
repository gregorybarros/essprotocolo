{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
    <div class="card-body">

        <h2>Editar protocolo: </h2><hr>
        <form action="/admin/postagens/edit" method="post">Empresas:
           <input type="hidden" value="{{postagem._id}}" name="id">
           <select class="custom-select" name="empresa" id="empresa">
           {{#each empresa}}
            <option name="option" value="{{_id}}">{{nome}}</option>
            {{else}}
            <option value="0">Nenhuma empresa registrada</option>
            {{/each}}
            </select><br><hr>
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">
            <label class="mt-3" for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control pt-5 pb-5">{{postagem.conteudo}}</textarea>
            <button class="btn btn-success mt-2" type="submit">Editar protocolo</button>
            


        </form>
        </div>
</div>
