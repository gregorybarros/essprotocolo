{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
    <div class="card-body">

        <h2>Editar protocolo: </h2><hr>
        <form action="/admin/postagens/edit" method="post">
           <input type="hidden" value="{{postagem._id}}" name="id">
           <p>Atual empresa: {{setEmpresa.nome}}</p>
           <select class="custom-select" name="empresa" id="empresa"> 
               <option value=""select>Escolha a empresa</option>              
           {{#each empresa}}
            <option name="empresa" value="{{_id}}">{{nome}}</option>
            {{else}}
            <option value="0">Nenhuma empresa registrada</option>
            {{/each}}
            </select><br><hr>
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">
            <label class="mt-3" for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control" rows="10">{{postagem.conteudo}}</textarea>
            <button class="btn btn-success mt-2" type="submit">Editar protocolo</button>
             <a href="/admin/postagens"><button class="btn btn-warning mt-2" type="button">Cancelar</button></a>
        </form>
       
        </div>
</div>
