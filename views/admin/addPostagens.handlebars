{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}



<div class="card">
    <div class="card-body">
        <h2>Novo protocolo: </h2><hr>
        <form action="/admin/postagens/nova" method="POST">Empresas:
           <select class="custom-select" name="empresa">
           {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
            {{else}}
            <option value="0">Nenhuma empresa registrada</option>
            {{/each}}
            </select><br><hr>
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control">
            <label class="mt-3" for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control pt-5 pb-5"></textarea>
            <button class="btn btn-success mt-2" type="submit">Criar protocolo</button>
            


        </form>
        </div>
</div>