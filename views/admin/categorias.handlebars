<h2>Lista de empresas</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova empresa</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Editar empresa</button></a>
        </div>
    </div>

{{else}}

{{/each}}