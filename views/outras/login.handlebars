<div id="login" class="card col-md-4 mx-auto pt-4">
  <img class="rounded mx-auto d-block" src="https://www.essystem.com.br/wp-content/uploads/2015/04/logoweb.png" alt="Essystem">
     <div class="card-body p-3 pt-0">
  <form method="post" action="/login" class="px-4 py-3">
    <div class="form-group">
      <label for="exampleDropdownFormEmail1">Email</label>
      <input name="email" type="email" class="form-control" id="exampleDropdownFormEmail1" placeholder="email@essystem.com.br" required>
    </div>
    <div class="form-group">
      <label for="exampleDropdownFormPassword1">Senha</label>
      <input name="senha" type="password" class="form-control" id="exampleDropdownFormPassword1" placeholder="Senha" required>
    </div><hr>
    <div class="form-group">
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="dropdownCheck">
        <label class="form-check-label" for="dropdownCheck">
          Lembre de mim
        </label>
      </div>
    </div>
    <button type="submit" class="rounded mx-auto d-block btn btn-success mt-4 p-3">Entrar</button>
  </form>
        {{#if error}}
  <div class="alert alert-danger text-center">{{error}}</div>
  {{else}}
  {{/if}}
